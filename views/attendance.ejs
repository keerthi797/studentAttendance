<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student Collection</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> 
</head>
<body>

    
  <h2>Attendance Records</h2>
  <p>Total Working Days : <%=workingDays%></p>  
 

    <table class="table table-bordered">
    <thead style="font-weight: lighter;">     
    
      <tr style="font-size: 15px;font-weight: lighter;">
   
        <th>Class</td>
        <th>Section</td> 
          <th>Date</th>
          <th>Absentees</th>
        <!-- <th>Action</td> -->
      </tr>
    </thead> 
  
    <tbody>         
   
      <% students.forEach(function(details) { %>
        <tr>      
       
          <!-- <td scope="row"><%= details.username  %></td>        
        <td><%= details.name %></td> -->
         <td><%= details.stclass %></td>
        <td><%= details.section %></td> 
        <td scope="row"><%= details.date %></td>
        
        <td><%=details.absent %></td>
       <!-- <td style="font-weight: lighter;font-size: small;"><a href="/edit/<%= details._id %>">Edit</a> | <a href="/delete/<%= details._id %>">Delete</a></td> -->
      </tr>
     
    <% }) %>
     
    </tbody>
    </table>
</body>
</html>